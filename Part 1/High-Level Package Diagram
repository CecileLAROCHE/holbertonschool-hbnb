%% Définition des couches comme packages
class PresentationLayer {
    <<Layer>>
    +API
    +API endpoints
}
class BusinessLogicLayer {
    <<Layer>>
    +User
    +Place
    +Review
    +Amenity
}
class PersistenceLayer {
    <<Layer>>
    +DatabaseAccess
}

%% Relations
PresentationLayer --> BusinessLogicLayer : 🔄 Call Logic
BusinessLogicLayer --> PersistenceLayer : 🗄️ Access Data

%% Optionnel : ajouter un sens hiérarchique
note for PresentationLayer "👆 Exposé à l'extérieur"
note for PersistenceLayer "👇 Stockage interne"
