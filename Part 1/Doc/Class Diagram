classDiagram
direction TB
    class BaseModel {
	    -id : UUID
	    +created_at : DateTime
	    +updated_at : DateTime
	    +deleted_at : DateTime
	    +save() void
	    +delete() void
    }
    class User {
	    +firstname: str
	    +lastname: str
	    +email: str
	    -password: str
	    +administrator: Boolean
	    +verify_email() : bool
	    -hash_password(password: String, salt: Bytes) Bytes
	    -verify_password(password: String) bool
    }
    class Place {
	    +title: str
	    +description: str
	    +price: float
	    +latitude: float
	    +longitude: float
	    +is_available(start_date, end_date) bool
	    +book(user, start_date, end_date)
	    +add_review(review: Review)
	    +get_average_rating() : float
	    +add_amenity(amenity: Amenity)
	    +remove_amenity(amenity: Amenity)
	    +get_location(): (float, float)
    }
    class Review {
	    +rating: float
	    +comment: str
	    +language: str
	    +review_date: DateTime
		+is_valid() bool
		+report_inappropriate() void
    }
    class Amenity {
	    +name: string
	    +description: string
	    +is_available() bool
		+get_info() str
		+get_summary() str
    }

	<<abstract>> BaseModel

    BaseModel <|-- User
    BaseModel <|-- Place
    BaseModel <|-- Review
    BaseModel <|-- Amenity
	
    Place "1" --> "*" Review : has
    User "1" --> "*" Place : owns
    Place "*" --> "*" Amenity : includes
    User "1" --> "*" Review : writes
